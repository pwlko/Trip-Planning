<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_transparent_bg_gray"
    >

    <EditText
        android:id="@+id/heu_option_km_per_day_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_edittext_drawable"
        android:gravity="center"
        android:hint="@string/km_number"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#000000"
        />

    <EditText
        android:id="@+id/heu_option_visit_per_day_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_edittext_drawable"
        android:gravity="center"
        android:hint="@string/visit_per_day"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#000000"
        />

    <EditText
        android:id="@+id/heu_option_number_of_days_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_edittext_drawable"
        android:gravity="center"
        android:hint="@string/days_number"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#000000"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/heu_options_cancel_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttons"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/heu_options_ok_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttons"
            android:text="OK"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"

            />


    </LinearLayout>




</LinearLayout>