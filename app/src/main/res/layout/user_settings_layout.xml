<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_photo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_edittext_drawable"
        android:gravity="center"
        android:alpha="0.85">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/mail_row"
            >

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@drawable/ic_mail_48dp" />

            <TextView
                android:id="@+id/mail_changing_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:text="@string/changing_mail_text"
                android:textStyle="bold"
                android:textSize="18sp" />


        </TableRow>

        <View style="@style/Divider"
            android:layout_gravity="center_vertical"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/password_row"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@drawable/ic_password_48dp" />

            <TextView
                android:id="@+id/change_password_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:text="@string/change_password_text"
                android:textStyle="bold"
                android:textSize="18sp" />

        </TableRow>

        <View style="@style/Divider"
            android:layout_gravity="center_vertical"
            />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</LinearLayout>
